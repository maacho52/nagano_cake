<div class="container">
  <h3>会員情報編集</h3>
  <div class="row">

    <div class="col">
      <%= form_with model: @customer, url: customers_information_path(@customer.id), method: :patch do |f| %>

        <label><p class="customer-label">氏名</p></label>
        <%= f.text_field :last_name %> <%= f.text_field :first_name %><br>

        <label><p class="customer-label">フリガナ</p></label>
        <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %><br>

        <label><p class="customer-label">郵便番号</p></label>
        <%= f.text_field :postal_code %><br>

        <label><p class="customer-label">住所</p></label>
        <%= f.text_field :address %><br>

        <label><p class="customer-label">電話番号</p></label>
        <%= f.text_field :telephone_number %><br>

        <label><p class="customer-label">メールアドレス</p></label>
        <%= f.text_field :email %><br>

          <div class="submit-button">
            <%= f.submit '編集内容を保存', class: "btn btn-sm btn-success w-50" %>
            <%= link_to '退会する', customers_confirm_path, class: "btn btn-sm btn-danger w-30" %>
          </div>
      <% end %>
    </div>
  </div>
</div>