<div class="container">
  <div class="row">
    <div class="col">
      <h3>注文情報入力</h3>
      <%= from_with model: @order, url: new_order_path do |f| %>
      <div class="payment-method">
        <%= f.radio_button :payment_method, "クレジットカード", checked: "checked" %>
        <%= f.label :payment_method, "クレジットカード" %>
      </div>

      <div class="delivery-address">
        <%= f.radio_button :address, "ご自身の住所", checked: "checked" %>
        <%= f.label :address, "ご自身の住所" %><br>
        <%= @customer.postal_code %> <%= @customer.address %>
      </div>

      <div class="registered-address">
        <%= f.radio_button :address, "登録済住所から選択" %>
        <%= f.label :address, "登録済住所から選択" %> <br>
        <%= f.collection_select, , current_customer.addresses, :id, (:postal_code + :address) %>
      </div>

      <div class="new-delivery-address">
        <%= f.radio_button :address, "新しいお届け先" %>
        <%= f.label :address, "新しいお届け先" %><br>

        <label><p class="fs-6">郵便番号(ハイフンなし)</p></label>
        <%= f.text_field :postal_code, placeholder="表示させたいテキストを記述" %>

        <label><p class="fs-6">住所</p></label>
        <%= f.text_field :address, placeholder="表示させたいテキストを記述" %>

        <label><p class="fs-6">宛名</p></label>
        <%= f.text_field :name, placeholder="表示させたいテキストを記述" %>
      </div>

      <div class="button">
        <%= f.submit "確認画面へ進む", class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  </div>
</div>