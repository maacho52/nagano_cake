<div class="container">
  <div class="row">
    <h3>注文履歴詳細</h3>
    <div class="col">
      <h5>注文情報</h5>
      <table class="table">
        <tbody>
          <tr>
            <th class="table-secondary">注文日</th>
            <td><%= @order.created_at %></td>
          </tr>

          <tr>
            <th class="table-secondary">配送先<th>
            <td><%= @order.address.address_display %></td>
          </tr>
          
          <tr>
            <th class="table-secondary">支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          
          <tr>
            <th class="table-secondary">ステータス</th>
            <td><%= @order.order_status %></td>
          </tr>
        </tbody>
      </table>
    </div>
    
    <div class="col">
      <h5>請求情報</h5>
      <table class="table">
        <tr>
          <th class="table-secondary">商品合計</th>
          <td><%= @order.@total += cart_item.subtotal %></td>
        </tr>
        
        <tr>
          <th class="table-secondary">配送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        
        <tr>
          <th class="table-secondary font-weight">ご請求額</th>
          <td><%= (@order.total_payment).floor.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <h5>注文内容</h5>
      <table class="table">
        <thead class="table-secondary">
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        
        <tbody>
          <% @order.each do |order| %>
            <tr>
              <td><%= order.item.name %></td>
              <td><%= order.item.with_tax_price %></td>
              <td><%= order.item.amount %></td>
              <td><%= order.item.subtotal %></td>
            </tr>
          <% end %>  
        </tbody>
      </table>
    </div>
  </div>
</div>