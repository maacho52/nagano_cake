<div class="container">
  <div class="row">
    <h3>注文履歴一覧</h3>
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th class="table table-borderd table-active">注文日</th>
            <th class="table table-borderd table-active">配送先</th>
            <th class="table table-borderd table-active">注文商品</th>
            <th class="table table-borderd table-active">支払金額</th>
            <th class="table table-borderd table-active">ステータス</th>
            <th class="table table-borderd table-active">注文詳細</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at %></td>
              <td><%= order.eddress.address_displyay %></td>
              <td><%= order.item.name %></td>
              <td><%= order.total_payment %></td>
              <td><!-- 注文ステータスの表示--></td>
              <td><%= link_to '表示する', order_path, class: "btn btn-sm btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>