<div class="container">
      <h3>注文履歴一覧</h3>
  <div class="row">
    <div class="col">
      <table class="table layout-order-index">
        <thead>
          <tr>
            <th class="table table-borderd table-active top">注文日</th>
            <th class="table table-borderd table-active second">配送先</th>
            <th class="table table-borderd table-active third">注文商品</th>
            <th class="table table-borderd table-active forth">支払金額</th>
            <th class="table table-borderd table-active fifth">ステータス</th>
            <th class="table table-borderd table-active sixth">注文詳細</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                〒<%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %>
              </td>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %>
                <% end %>  
              </td>
              <td><%= order.total_payment %></td>
              <td><!-- 注文ステータスの表示--></td>
              <td><%= link_to '表示する', order_path(order.id), class: "btn btn-sm btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>