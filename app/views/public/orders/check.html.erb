<div class="container">
    <div class="row">
      <h3>注文情報確認</h3>
      <div class="col">
        <table class="table">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
        
          <tbody>
            <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= image_tag cart_item.item.image size: "50×25" %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.with_tax_price.to_s(:delimited) %></td>
              <td><%= cart_item.item.amount %></td>
              <td><%= catrt_item.subtotal.to_s(:delimited) %></td>
            </tr>
          </tbody>
        </table>
      </div>  
    
      <div class="col">  
        <%= form_with model: @order, url: orders_path do |f| %>
          <table class="table">
            <tbody>
              <tr>
                <th>送料</th>
                <td>
                  <%= @order.shipping_cost.to_s(:delimited) %>
                  <%= f.hidden_field :shipping_cost, value: @order.shipping_cost %>
                </td>
              </tr>
              <tr>
                <th>商品合計</th>
                <td>
                  <%= @total.to_s(:delimited) %>
                </td>
              </tr>
              <tr>
                <th>請求金額</th>
                <td>
                  <%= @order.total_payment %>
                  <%= f.hidden_field :total_payment value: @order.total_payment %>
                </td>
              </tr>
            </tbody>
          </table>
      </div>
    </div>  
  
          <div class="row">
            <div class="col">
              <label>支払方法</label>
               <%= @order.payment_method %>
               <%= f.hidden_field :payment_method, value: @order.payment_method %><br>
       
              <label>お届け先</label>
              <%= @order.postal_code %> <%= @order.address %>
              <%= f.hidden_field :postal_code, value: @order.postal_code %>
              <%= f.hidden_filed :address, valuse: @order.address %><br>
      
              <div class="button">
                <%= f.submit '注文を確定する', class: "btn btn-sm btn-success" %>
              </div>
            </div>
          </div>
        <% end %>  
</div>