<div class="container">
  <div class="row">
    <div class="col">
      <h3>ショッピングカード</h3>
    </div>
    <div class="col">
      <%= link_to 'カートを空にする', cart_items_destroy_all_path, class: "btn btn-sm btn-danger mr-auto" %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th class="table-active">商品名</th>
            <th class="table-active">単価(税込)</th>
            <th class="table-active">数量</th>
            <th class="table-active">小計</th>
            <th class="table-active" colespan="1"></th>
          </tr>
        </thead>

        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= image_tag cart_item.item.image size: "50×25" %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.with_tax_price.to_s(:delimited) %></td>
              <td>
                <%= form_with model: cart_items, url: cart_items_path(cart_item) do |f| %>
                  <%= f.select :amount, *[1..30] %> <%= f.submit '変更' %>
                  <%= f.hidden_filed :item_id, :value => @item.id %>
                <% end %>
              </td>
              <td><%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, class: "btn-btn-sm btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= link_to '買い物を続ける', root_path, class: "btn btn-sm btn-primary ml-auto" %>
      <table>
        <tr>
          <th class="table-active">合計金額</th>
          <td>
            <%= @total.round.to_s(:delimited) %>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="button">
      <%= link_to '情報入力に進む', new_order_path, class: "btn btn-lg btn-success" %>
    </div>
  </div>
</div>