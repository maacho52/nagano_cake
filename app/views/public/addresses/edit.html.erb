<div class="container">
  <h3>配送先編集</h3>
  <div class="row">
    <div class="col">
      <%= form_with model @address, url: edit_address_path(@address) do |f| %>
        <label class="address-edit">郵便番号(ハイフンなし)</label>
        <%= f.text_field :postal_code %><br>

        <label class="addres_edit">住所</label>
        <%= f.text_field :address %><br>

        <label class="addres_edit">宛名</label>
        <%= f.text_field :name %>
        <%= f.submit "変更を保存", class: "btn btn-sm btn-success mr-auto" %>
    </div>
  </div>
</div>