<div class="container">
  <h3>配送先編集</h3>
       <% if @address.errors.any? %>
       <h5><%= @address.errors.count %>件のエラーが発生しました。</h5>
       <ul>
          <% @address.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
       </ul>
     <% end %>

  <div class="row">
    <%= form_with model: @address, url: address_path(@address) do |f| %>
      <div class="col">
        <label class="address-edit">郵便番号(ハイフンなし)</label>
        <%= f.text_field :postal_code %><br>

        <label class="addres_edit">住所</label>
        <span class="address-field"><%= f.text_field :address, :size => "60" %></span><br>

        <label class="addres_edit">宛名</label>
        <span class="name-field"><%= f.text_field :name %></span>
      </div>

      <div class="col text-right">
        <%= f.submit "変更内容を保存", class: "btn btn-sm btn-success mr-auto" %>
      </div>
    <% end %>
    </div>
  </div>
</div>