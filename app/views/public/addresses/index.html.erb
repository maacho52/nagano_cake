<div class="container">
  <div class="row">
    <h3>配送先登録/一覧</h3>
    <div class="col">
      <%= form_with model: @addresses, url: addresses_path, do |f| %>
        <label><p class="addresses-label">郵便番号</p></label>
        <%= f.text_field :postal_code %><br>
        
        <label><p class="addresses-label">住所</p></label>
        <%= f.text_field :address %><br>
        
        <label><p class="addresses-label">宛名</p></label>
        <%= f.text_field :name %>
        
        <%= f.submit '新規登録', addresses_path, class: "btn btn-sm btn-success w-50% mr-auto" %>
        
        <table>
          <tr>
            <th class=""></th>
          </tr>
        </table>
      
    </div>
  </div>
</div>