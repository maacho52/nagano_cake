<div class="container">
  <div class="row">
    <h3>商品一覧</h3>
    <div class="col-md-3"></div>
    <div class="col-md-9">
      <div class="row">
        <% @items.each do |item| %>
          <div class="col">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.image, size: '150x100' %><br>
            <% end %>
            <%= item.name %><br>
            ￥<%= (item.with_tax_price).to_s(:delimeted) %>
          </div>
       <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-9">
      <div class="pagination">
        <%= paginate @items %>
      </div>
    </div>
  </div>

</div>
