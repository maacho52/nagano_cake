<div class="container">
  <h3>管理者ログイン</h3>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="field">
          <%= f.label :"メールアドレス   "%>
          <%= f.email_field :email, autofocus: true, style: "width:60%", autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード   " %>
          <%= f.password_field :password, style: "width:60%", autocomplete: "current-password" %>
        </div>

          <div class="submit-button">
            <%= f.submit "ログイン", class: "btn btn-lg btn-primary" %>
          </div>
      <% end %>

    </div>
  </div>
</div>
