<div class="container">
  <h3>ジャンル編集</h3>
  <div class="row">
    <div class="col">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
        <label>ジャンル名</label>
        <span>
          <%= f.text_field :name, autofocus: true %>
        </span>
        <span>
          <%= f.submit '変更を保存', class: "btn btn-sm btn-success" %>
        </span>  
      <% end %>
    </div>
  </div>
</div>