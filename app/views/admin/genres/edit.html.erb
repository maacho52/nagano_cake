<div class="container">
  <div class="row">
    <div class="col">
      <h2>ジャンル編集</h2>
      <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
        <label>ジャンル名</label>
        <%= f.text_field :name, autofocus: true %>
        <%= f.submit '変更を保存', class: "btn btn-sm btn-success" %>
      <% end %>
    </div>
  </div>
</div>