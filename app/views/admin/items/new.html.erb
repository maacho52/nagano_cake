<div class="container">
  <h3>商品新規登録</h3>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col mx-auto">
      <%= form_with model: @item, url: admin_items_path do |f| %>
      <div class="d-flex">
        <label for="inputImage", class="admin-itemlabel">商品画像</label>
        <%= f.file_field :image, accept: "image/*" %><br>
      </div>

        <label for="inputname", class="admin-itemlabel">商品名</label>
        <%= f.text_field :name, autofocus: true, id:"inputname", placeholder: "商品名", :size=>"30" %><br>

        <label for="inputintroduction", class="admin-itemlabel">商品説明</label>
        <%= f.text_area :introduction, id:"inputintroduction", placeholder: "ここに説明文を記述します" %><br>

        <label for="genre", class="admin-itemlabel">ジャンル</label>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: "選択してください" } %><br>

        <label for="inputprice", class="admin-itemlabel">税抜価格</label>
        <%= f.text_field :price, id:"inputprice", placeholder: "1000", :size=>"30" %><br>

        <label for="is_active", class="admin-itemlabel">販売ステータス</label>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, '販売中', value: true %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, '販売停止中', value: false %><br>

          <div class="submit-button"><%= f.submit '新規登録', class: "btn btn-lg btn-success" %></div>
      <% end %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>