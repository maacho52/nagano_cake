<div class="container">
  <div class="d-flex">
    <h3>商品一覧</h3>
    <%= link_to new_admin_item_path, class: "btn btn--circle btn--circle-c btn--shadow ml-auto"  do %>
     <i class="fa-solid fa-plus ml-auto mt-3 fa-2x" style="color: gray;"></i>
    <% end %>
  </div>
  
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th class="font-weight-bold table-active">商品ID</th>
            <th class="font-weight-bold table-active">商品名</th>
            <th class="font-weight-bold table-active">税抜価格</th>
            <th class="font-weight-bold table-active">ジャンル</th>
            <th class="font-weight-bold table-active">ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id) %></td>
              <td><%= item.price.floor.to_s(:delimited) %></td>
              <td><%= item.genre.name %></td>
              <% if item.is_active == true %>
                <td class="font-weight-bold"><p class="text-success">販売中</p></td>
              <% else %>
                <td class="font-weight-bold "><p class="text-secondary">販売停止中</p></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
    <div class="col-md-1"></div>
  </div>
</div>