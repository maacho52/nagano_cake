<div class="container">
  <div class="row">
    <div class="col">
      <h2>商品一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th class="font-weight-bold">商品ID</th>
            <th class="font-weight-bold">商品名</th>
            <th class="font-weight-bold">税抜価格</th>
            <th class="font-weight-bold">ジャンル</th>
            <th class="font-weight-bold">ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, item_admin_path(item.id) %></td>
              <td><%= item.price %></td>
              <td><%= item.genre_id %></td>
              <td><%= item.is_active %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>