<div class="container">
  <h3>商品詳細</h3>
  <div class="row">
    <div class="col-md-3">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "200x200" %>
      <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
      <% end %>
    </div>

    <div class="col-md-6">
          <div>
            <label class="admin-itemshow"><strong>商品名</strong></label>
            <%= @item.name %>
          </div>

          <div>
            <label class="admin-itemshow"><strong>商品説明</strong></label>
            <%= @item.introduction %>
          </div>

          <div>
            <label class="admin-itemshow"><strong>ジャンル</strong></label>
            <%= @item.genre.name %>
          </div>

          <div>
            <label class="admin-itemshow"><strong>税込み価格<br>(税抜き価格)</strong></label>
            <%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)
          </div>

          <div class="d-flex">
            <label class="admin-itemshow"><strong>販売ステータス</strong></label>
            <% if @item.is_active == true %>
              <strong><p class="text-success">販売中</p></strong>
            <% else %>
              <strong><p class="text-secondary">販売停止中</p></strong>
            <% end %>
          </div>
    </div>
    <div class="col-md-3"></div>
  </div>

  <div class="row">
    <div class="col-md-6"></div>
    <div class="col-mde-6">
      <div class="center-block">
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-lg btn-success" %>
      </div>

    </div>
  </div>
</div>