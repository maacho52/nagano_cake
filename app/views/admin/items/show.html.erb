<div class="container">
  <h3>商品詳細</h3>
  <div class="row">
    <div class="col-md-3">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "200x200" %>
      <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
      <% end %>
    </div>

    <div class="col-md-6">
          <div>
            <strong class="item-show-label">商品名       </strong>
            <span><%= @item.name %></span>
          </div>

          <div>
            <strong class="item-show-label">商品説明     </strong>
            <span><%= @item.introduction %></span>
          </div>

          <div>
            <strong class="item-show-label">ジャンル     </strong>
            <span><%= @item.genre.name %></span>
          </div>

          <div>
            <strong class="item-show-label">税込み価格<br>(税抜き価格)</strong>
            <span><%= (@item.price * 1.10).floor.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)</span>
          </div>

          <div>
            <strong class="item-show-label">販売ステータス</strong>
            <span><% if @item.is_active == true %>
                    <strong><p class="text-success">販売中</p></strong>
                  <% else %>
                    <strong><p class="text-secondary">販売停止中</p></strong>
                  <% end %>
            </span>
          </div>
    </div>
    <div class="col-md-3"></div>
  </div>

  <div class="row">
    <div class="col-md-6"></div>
    <div class="col-mde-6">
      <div class="center-block">
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-lg btn-success" %>
      </div>

    </div>
  </div>
</div>