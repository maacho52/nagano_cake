<div class="container">
  <h3><%= @customer.full_name %>さんの会員情報</h3>
  <div class="row">

    <div class="col">
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
        <label><p class="customer-label">会員ID</p></label>
        <%= @customer.id %><br>
        
        <label><p class="customer-label">氏名</p></label>
        <%= f.text_field :first_name %> <%= f.text_field :last_name %><br>
        
        <label><p class="customer-label">フリガナ</p></label>
        <%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %><br>
        
        <label><p class="customer-label">郵便番号</p></label>
        <%= f.text_field :postal_code %><br>
        
        <label><p class="customer-label">住所</p></label>
        <%= f.text_field :address %><br>
        
        <label><p class="customer-label">電話番号</p></label>
        <%= f.text_field :telephone_number %><br>
        
        <label><p class="customer-label">メールアドレス</p></label>
        <%= f.text_field :email %><br>
        
        <label><p class="customer-label">会員ステータス</p></label>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, '有効', value: true %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, '退会', value: false %><br>
          
          <div class="submit-button"><%= f.submit '変更を保存', class: "btn btn-sm btn-success" %></div>
      <% end %>    
    </div>
  </div>
</div>