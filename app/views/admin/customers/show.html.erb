<div class="container">
  <div class="row">
    <h2><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h2>

    <div class="col">
      <table class="table">
        <tbody>
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id%></td>
          </tr>

          <tr>
            <th>氏名</th>
            <td><%= @customer.last_name + @customer.first_name %></td>
          </tr>

          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>

          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>

          <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>

          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>

          <tr>
            <th販売ステータス></th>
            <td><% if @item.is_active == true %>
                  <p>販売中</p>
                <% else %>
                  <p>販売停止中</p>
                <% end %>
            </td>
          </tr>
        </tbody>
      </table>

      <%= link_to "編集する", edit_admin_customoer_path(@customer), class: "btn btn-sm btn-success" %>
      <%= link_to "注文履歴一覧を見る", class: "btn btn-sm btn-secondary" %>
      #注文履歴一覧先のURL
    </div>
  </div>
</div>