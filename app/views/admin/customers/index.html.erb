<div class="container">
  <div class="row">
    <div class="col">
      <h2>会員一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th class="font-weight-bold">商品ID</th>
            <th class="font-weight-bold">氏名</th>
            <th class="font-weight-bold">メールアドレス</th>
            <th class="font-weight-bold">ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to (customer.last_name + customer.first_name), admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td>
              <% if customer.is_deleted == true %>
                <td class="font-weight-bold text-secnodary">退会</td>
              <% else %>
                <td class="font-weight-bold text-success">有効</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>