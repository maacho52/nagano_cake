<div class="container">
  <h2>注文履歴詳細</h2>
  <div class="row">
    <div class="col">
      <strong>購入者</strong>
      <%= link_to admin_customer_path(@order) do %>
        <%= @order.last_name %> <%= @order.first_name %>
      <% end %><br>

      <strong>注文日</strong>
      <%= @order.created_at %><br>

      <strong>配送先</strong>
      <%= @order.postal_code %> <%= @order.address %> <%= @order.name %><br>

      <strong>支払方法</strong>
      <%= @order.payment_method %>

      <strong>注文ステータス</strong>
      <%= from_with model: @order, url: admin_order_path(@order), local: true do |f| %>
        <%= f.select :order_status, @order.order_statuses_i18n.invert, {prompt: false}, class:"form-control form-control-sm col-6"  %>
        <%= f.submit "更新" class: 'btn btn-sm btn-success' %>
      <% end %>

    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th class="font-weight-bold">商品名</th>
            <th class="font-weight-bold">単価( 税込 )</th>
            <th class="font-weight-bold">数量</th>
            <th class="font-weight-bold">小計</th>
            <th class="font-weight-bold">製作ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.items.name %></td>
              <td><%= order_detail.with_tax_price.to_s(:delimited) %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.subtotal.to_s(:delimited) %></td>
              <td>
                <%= form_with model: order_detail, url: admin_order_detail_path(order_detail), method: :patch local: true do |f| %>
                  <%= f.select :making_status, order_detail.making_status_i18n_invers, {prompt: false}, class: "form-control form-control-sm col-6" %>
                  <%= f.submit "更新", class: "btn btn-sm btn-seccess" %>
                <% end %>
              </td>
            </tr>
        </tbody>
      </table>
    </div>

    <div class="col">
      <strong>商品合計</strong>
      <%= (@order.total_payment - @order.shipping_cost).floor.to_s(:delimited) %><br>

      <strong>送料</strong>
      <%= @order.shipping_cost %><br>

      <strong>請求金額合計</strong>
      <strong><%= @order.total_payment.floor.to_s(:delimited) %></strong>
    </div>
  </div>
</div>