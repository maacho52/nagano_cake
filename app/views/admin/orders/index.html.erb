<div class="container">
  <div class="row">

    <div class="col">
      <h3>注文履歴一覧</h3>
        <table class="table">
          <thead>
            <tr>
              <th class="font-weight-bold">購入日時</th>
              <th class="font-weight-bold">購入者</th>
              <th class="font-weight-bold">注文個数</th>
              <th class="font-weight-bold">注文ステータス</th>

            </tr>
          </thead>
          
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.created_at %></td>
                <td><%= order.customer.name %></td>
                <td><%= order.cart_item.amount %></td>
                <td><!--order.order_detai 注文ステータスの表示--></td>
              </tr>
            <% end %>  
          </tbody>
        </table>
        <%= paginate @orders %>
    </div>
  </div>
</div>